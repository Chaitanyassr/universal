// This config contains flow manager configurations that are shared by both Local Flow Manager and
// Cloud Based Flow Manager.
{
    "type": "gpii.flowManager.config.base",
    "options": {
        "mainServerPort": 8081,
        "distributeOptions": {
            "flowManager.development.solutions": {
                "record": {
                    "type": "gpii.flowManager.solutionsRegistry.dataSource",
                    "options": {
                        "gradeNames": "gpii.flowManager.solutionsRegistry.dataSource.moduleTerms",
                        "path": "%gpii-universal/testData/solutions/"
                    }
                },
                "target": "{that flowManager solutionsRegistryDataSource}"
            },
            "flowManager.preferencesDataSource.default": {
                "record": {
                    "type": "kettle.dataSource.URL",
                    "options": {
                        "url": "http://localhost:8081/preferences/%gpiiKey?merge=%merge",
                        "port": "{kettle.config}.options.mainServerPort"
                    }
                },
                "target": "{that flowManager preferencesDataSource}"
            },
            "flowManager.preferencesDataSource.envUrl": {
                "record": "@expand:kettle.resolvers.env(GPII_FLOWMANAGER_TO_PREFERENCESSERVER_URL)",
                "target": "{that flowManager preferencesDataSource}.options.url",
                "priority": "after:flowManager.preferencesDataSource.default"
            }
        },
        "components": {
            "server": {
                "type": "kettle.server",
                "options": {
                    "port": "{kettle.config}.options.mainServerPort",
                    "components": {
                        "flowManager": {
                            "type": "gpii.flowManager"
                        }
                    }
                }
            }
        }
    },
    "require": [
        "flowManager"
    ]
}
